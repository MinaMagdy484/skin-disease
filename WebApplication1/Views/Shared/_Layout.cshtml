@using Microsoft.AspNetCore.Identity
@inject SignInManager<WebApplication1.Models.ApplicationUser> SignInManager
@inject UserManager<WebApplication1.Models.ApplicationUser> UserManager
@{
    var currentUser = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
    var isDoctor = false;
    WebApplication1.Models.Doctor? doctor = null;

    if (currentUser != null)
    {
        var context = Context.RequestServices.GetRequiredService<WebApplication1.Models.ApplicationDbContext>();
        doctor = context.Doctors.FirstOrDefault(d => d.ApplicationUserId == currentUser.Id);
        isDoctor = doctor != null;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skin Disease Detection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #f8f9fa;
            color: #2c3e50;
        }

        /* Modern Navbar */
        .navbar {
            background: white !important;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            padding: 1rem 0;
            transition: all 0.3s ease;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
