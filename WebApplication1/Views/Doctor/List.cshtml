@model IEnumerable<WebApplication1.Models.Doctor>
@{
    ViewData["Title"] = "Find a Doctor";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    .doctors-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 0;
        border-radius: 20px;
        margin-bottom: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .doctors-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .search-box {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .search-box .form-control,
    .search-box .form-select {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 0.75rem 1rem;
    }

    .search-box .form-control:focus,
    .search-box .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .doctor-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        display: flex;
        gap: 2rem;
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .doctor-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .doctor-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3.5rem;
        flex-shrink: 0;
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .doctor-info {
        flex: 1;
    }

    .doctor-name {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .doctor-specialization {
        color: #667eea;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .doctor-bio {
        color: #7f8c8d;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .doctor-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin: 1rem 0;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #7f8c8d;
        font-size: 0.95rem;
    }

    .detail-item i {
        color: #667eea;
        width: 20px;
    }

    .rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.1rem;
        margin: 1rem 0;
    }

    .stars {
        color: #f39c12;
    }

    .doctor-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .btn-view {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-message {
        background: white;
        border: 2px solid #667eea;
        color: #667eea;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-message:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
    }

    .no-doctors {
        text-align: center;
        padding: 3rem;
        color: #7f8c8d;
    }

    .no-doctors i {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: #e9ecef;
    }

    @@media (max-width: 768px) {
        .doctor-card {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .doctor-avatar {
            width: 120px;
            height: 120px;
            font-size: 3rem;
        }

        .doctor-actions {
            justify-content: center;
        }
    }
</style>

<div class="container">
    <div class="doctors-header">
        <h1><i class="fas fa-user-md me-2"></i>Find Your Doctor</h1>
        <p>Connect with verified dermatologists</p>
    </div>

    <div class="search-box">
        <div class="row">
            <div class="col-md-6 mb-3 mb-md-0">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control" id="searchName" placeholder="Search by name..." onkeyup="filterDoctors()">
                </div>
            </div>
            <div class="col-md-6">
                <select class="form-select" id="searchSpec" onchange="filterDoctors()">
                    <option value="">All Specializations</option>
                    <option value="Dermatology">Dermatology</option>
                    <option value="General Practice">General Practice</option>
                    <option value="Cosmetic Dermatology">Cosmetic Dermatology</option>
                    <option value="Pediatric Dermatology">Pediatric Dermatology</option>
                </select>
            </div>
        </div>
    </div>

    <div id="doctorsList">
        @if (Model.Any())
        {
            @foreach (var doctor in Model)
            {
                <div class="doctor-card" data-name="@doctor.FullName.ToLower()" data-spec="@doctor.Specialization">
                    <div class="doctor-avatar">
                        <i class="fas fa-user-md"></i>
                    </div>

                    <div class="doctor-info">
                        <h3 class="doctor-name">@doctor.FullName</h3>
                        <div class="doctor-specialization">
                            <i class="fas fa-stethoscope"></i>
                            <span>@doctor.Specialization</span>
                        </div>

                        @if (!string.IsNullOrEmpty(doctor.Bio))
                        {
                            <p class="doctor-bio">@doctor.Bio</p>
                        }

                        <div class="doctor-details">
                            <div class="detail-item">
                                <i class="fas fa-award"></i>
                                <span>@doctor.YearsOfExperience years experience</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-phone"></i>
                                <span>@doctor.PhoneNumber</span>
                            </div>
                            @if (!string.IsNullOrEmpty(doctor.ClinicAddress))
                            {
                                <div class="detail-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>@(doctor.ClinicAddress.Length > 50 ? doctor.ClinicAddress.Substring(0, 50) + "..." : doctor.ClinicAddress)</span>
                                </div>
                            }
                        </div>

                        @{
                            var avgRating = doctor.Reviews?.Any() == true ? doctor.Reviews.Average(r => r.Rating) : 0;
                            var reviewCount = doctor.Reviews?.Count() ?? 0;
                        }

                        <div class="rating">
                            <span class="stars">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= avgRating)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else if (i - avgRating < 1)
                                    {
                                        <i class="fas fa-star-half-alt"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                }
                            </span>
                            <span><strong>@avgRating.ToString("0.0")</strong> (@reviewCount reviews)</span>
                        </div>

                        <div class="doctor-actions">
                            <a href="@Url.Action("Profile", "Doctor", new { id = doctor.Id })" class="btn-view">
                                <i class="fas fa-eye"></i>View Profile
                            </a>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a href="@Url.Action("Index", "Message", new { userId = doctor.ApplicationUserId })" class="btn-message">
                                    <i class="fas fa-comment-medical"></i>Send Message
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-doctors">
                <i class="fas fa-user-md"></i>
                <h3>No doctors available</h3>
                <p>Please check back later</p>
            </div>
        }
    </div>
</div>

<script>
    function filterDoctors() {
        const searchName = document.getElementById('searchName').value.toLowerCase();
        const searchSpec = document.getElementById('searchSpec').value;
        const cards = document.querySelectorAll('.doctor-card');

        cards.forEach(card => {
            const name = card.getAttribute('data-name');
            const spec = card.getAttribute('data-spec');

            const matchName = name.includes(searchName);
            const matchSpec = !searchSpec || spec === searchSpec;

            if (matchName && matchSpec) {
                card.style.display = 'flex';
            } else {
                card.style.display = 'none';
            }
        });
    }
</script>