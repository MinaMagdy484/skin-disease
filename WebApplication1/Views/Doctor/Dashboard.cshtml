@model WebApplication1.Models.Doctor
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .dashboard-header h1 {
        margin: 0;
        font-size: 2rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .stat-icon.blue {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .stat-icon.orange {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .stat-icon.green {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .stat-icon.purple {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        color: #764ba2;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        color: #7f8c8d;
        font-size: 0.95rem;
    }

    .content-section {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .section-title i {
        color: #667eea;
    }

    .message-item {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        background: #f8f9fa;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .message-item:hover {
        background: #e9ecef;
        transform: translateX(5px);
    }

    .message-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .message-content {
        flex: 1;
    }

    .message-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    .message-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .message-time {
        font-size: 0.85rem;
        color: #7f8c8d;
    }

    .message-preview {
        color: #7f8c8d;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .unread-badge {
        background: #e74c3c;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .profile-info-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 15px;
        padding: 1.5rem;
    }

    .profile-detail {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .profile-detail:last-child {
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: none;
    }

    .profile-detail i {
        width: 30px;
        color: #667eea;
        font-size: 1.2rem;
    }

    .profile-detail-label {
        font-size: 0.85rem;
        color: #7f8c8d;
        margin-bottom: 0.25rem;
    }

    .profile-detail-value {
        font-weight: 600;
        color: #2c3e50;
    }

    .btn-edit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .no-messages {
        text-align: center;
        padding: 2rem;
        color: #7f8c8d;
    }

    .no-messages i {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #e9ecef;
    }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="container">
    <div class="dashboard-header">
        <h1><i class="fas fa-stethoscope me-2"></i>Welcome, Dr. @Model.FullName</h1>
        <p>Manage your profile and patient interactions</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon blue">
                <i class="fas fa-star"></i>
            </div>
            <div class="stat-number">@ViewBag.AverageRating.ToString("0.0")</div>
            <div class="stat-label">Average Rating</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon orange">
                <i class="fas fa-comments"></i>
            </div>
            <div class="stat-number">@ViewBag.TotalReviews</div>
            <div class="stat-label">Total Reviews</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon green">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-number">@ViewBag.TotalPatients</div>
            <div class="stat-label">Total Patients</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon purple">
                <i class="fas fa-award"></i>
            </div>
            <div class="stat-number">@Model.YearsOfExperience</div>
            <div class="stat-label">Years Experience</div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="content-section">
                <h2 class="section-title">
                    <i class="fas fa-envelope"></i>Recent Messages
                </h2>

                @if (ViewBag.RecentMessages != null && ((IEnumerable<dynamic>)ViewBag.RecentMessages).Any())
                {
                    @foreach (var msg in (IEnumerable<dynamic>)ViewBag.RecentMessages)
                    {
                        <a href="@Url.Action("Index", "Message", new { userId = msg.OtherUserId })" class="message-item">
                            <div class="message-avatar">
                                @msg.OtherUser.FullName.Substring(0, 1).ToUpper()
                            </div>
                            <div class="message-content">
                                <div class="message-header">
                                    <span class="message-name">@msg.OtherUser.FullName</span>
                                    <span class="message-time">@msg.LastMessage.SentAt.ToString("MMM dd, hh:mm tt")</span>
                                </div>
                                <div class="message-preview">@msg.LastMessage.Content</div>
                            </div>
                            @if (msg.UnreadCount > 0)
                            {
                                <span class="unread-badge">@msg.UnreadCount</span>
                            }
                        </a>
                    }
                }
                else
                {
                    <div class="no-messages">
                        <i class="fas fa-envelope-open"></i>
                        <p>No messages yet</p>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="content-section">
                <h2 class="section-title">
                    <i class="fas fa-user"></i>Profile Information
                </h2>

                <div class="profile-info-card">
                    <div class="profile-detail">
                        <i class="fas fa-stethoscope"></i>
                        <div>
                            <div class="profile-detail-label">Specialization</div>
                            <div class="profile-detail-value">@Model.Specialization</div>
                        </div>
                    </div>

                    <div class="profile-detail">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <div class="profile-detail-label">Email</div>
                            <div class="profile-detail-value">@Model.Email</div>
                        </div>
                    </div>

                    <div class="profile-detail">
                        <i class="fas fa-phone"></i>
                        <div>
                            <div class="profile-detail-label">Phone</div>
                            <div class="profile-detail-value">@Model.PhoneNumber</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.LicenseNumber))
                    {
                        <div class="profile-detail">
                            <i class="fas fa-id-card"></i>
                            <div>
                                <div class="profile-detail-label">License Number</div>
                                <div class="profile-detail-value">@Model.LicenseNumber</div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ClinicAddress))
                    {
                        <div class="profile-detail">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <div class="profile-detail-label">Clinic Address</div>
                                <div class="profile-detail-value">@Model.ClinicAddress</div>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Profile", "Doctor", new { id = Model.Id })" class="btn-edit">
                        <i class="fas fa-eye"></i>View Public Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>